<Window x:Class="DGScopeProfileManager.Views.DefaultSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DGScope Default Settings Template" Height="650" Width="600"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Bottom Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Apply to All Profiles" Click="ApplyToAll_Click" MinWidth="120" Margin="5"/>
            <Button Content="Apply to Selected Profile" Click="ApplyToSelected_Click" MinWidth="150" Margin="5"/>
            <Button Content="Save Template" Click="SaveTemplate_Click" MinWidth="100" Margin="5"/>
            <Button Content="Close" IsCancel="True" MinWidth="80" Margin="5"/>
        </StackPanel>

        <!-- Instructions Panel -->
        <GroupBox DockPanel.Dock="Top" Header="Instructions" Margin="10,10,10,5">
            <TextBlock TextWrapping="Wrap" Margin="5">
                Edit the default settings template below. These values will be used when generating new profiles.
                <LineBreak/>
                Use "Apply to All" to apply these settings to all existing profiles, or "Apply to Selected" to apply to a specific profile.
            </TextBlock>
        </GroupBox>

        <!-- Main Content -->
        <ScrollViewer Margin="10">
            <StackPanel>
                <GroupBox Header="Brightness Settings" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Brightness (PrefSet):"/>
                        <TextBox Grid.Column="1" Name="BrightnessBox"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Screen Position Settings" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Screen Center Point:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="ScreenCenterPointBox"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Owned DataBlock Position:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="OwnedDataBlockPositionBox"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Preview Area Location:"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="PreviewAreaLocationBox"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Font Settings" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Font Name:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="FontNameBox"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Size:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="FontSizeBox"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Display Settings" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Screen Rotation:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="ScreenRotationBox"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Background Color:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="BackColorBox"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Location Settings" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Home Latitude:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="HomeLatitudeBox"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Home Longitude:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="HomeLongitudeBox"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Other Settings">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Altimeter Stations:"/>
                        <TextBox Grid.Column="1" Name="AltimeterStationsBox"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
