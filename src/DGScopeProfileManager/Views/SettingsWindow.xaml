<Window x:Class="DGScopeProfileManager.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="700"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- CRC Folder -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="CRC Root Folder:" VerticalAlignment="Center" Margin="0,0,10,10">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                        Should contain ARTCCs\ and VideoMaps\ subfolders<LineBreak/>
                        Example: C:\Users\YourName\AppData\Local\CRC
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
        </TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Name="CrcFolderPath" Margin="0,0,5,10" VerticalAlignment="Center"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Click="BrowseCrc_Click" Margin="0,0,0,10"/>

        <!-- DGScope Profiles Folder -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="DGScope Profiles Folder:" VerticalAlignment="Center" Margin="0,0,10,10">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                        Contains ARTCC/Facility/Profile.xml structure<LineBreak/>
                        Example: DGScope Profiles/ZDC/PCT/PCT_north.xml
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
        </TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Name="DgScopeFolderPath" Margin="0,0,5,10" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Click="BrowseDgScope_Click" Margin="0,0,0,10"/>

        <!-- DGScope Executable -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="DGScope Executable:" VerticalAlignment="Center" Margin="0,0,10,10">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                        Path to DGScope.exe to enable "Launch DGScope" feature<LineBreak/>
                        Example: C:\DGScope\scope\DGScope.exe
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
        </TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Name="DgScopeExePath" Margin="0,0,5,10" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Browse..." Click="BrowseDgScopeExe_Click" Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" IsDefault="True" Click="OK_Click" MinWidth="80" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
