<Window x:Class="DGScopeProfileManager.Views.TraconSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select TRACON to Generate" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Select a TRACON to generate a DGScope profile:" 
                   Margin="0,0,0,10" FontSize="14"/>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Generate" Click="Generate_Click" Padding="20,8" Margin="5" IsDefault="True"/>
            <Button Content="Cancel" Click="Cancel_Click" Padding="20,8" Margin="5" IsCancel="True"/>
        </StackPanel>
        
        <ListBox Name="TraconListBox" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Id}" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
