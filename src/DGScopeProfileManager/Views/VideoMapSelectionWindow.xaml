<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DGScopeProfileManager.Views.VideoMapSelectionWindow"
        Title="Select Video Map"
        WindowStartupLocation="CenterOwner"
        Width="500" Height="620"
        Background="#2D2D30"
        Foreground="#CCCCCC">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch">
            <TextBlock Text="Profile Name"
                       FontSize="14"
                       Foreground="#FFFFFF"
                       Margin="0 0 0 5"/>
            <Grid Margin="0 0 0 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Name="ProfilePrefixLabel"
                           Text="A11_"
                           FontSize="14"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           Margin="0 0 5 0"/>
                <TextBox Grid.Column="1"
                         Name="ProfileNameBox"
                         Height="30"
                         Background="#3E3E42"
                         Foreground="#999999"
                         BorderBrush="#555555"
                         Padding="5"
                         Text="default"
                         GotFocus="ProfileNameBox_GotFocus"
                         LostFocus="ProfileNameBox_LostFocus"
                         TextChanged="ProfileNameBox_TextChanged"/>
                <TextBlock Grid.Column="2"
                           Text=".xml"
                           FontSize="14"
                           Foreground="#FFFFFF"
                           VerticalAlignment="Center"
                           Margin="5 0 0 0"/>
            </Grid>

            <TextBlock Text="Available Video Maps"
                       FontSize="14"
                       Foreground="#FFFFFF"
                       Margin="0 0 0 10"/>

            <ListBox Name="VideoMapsList"
                     Height="380"
                     Background="#3E3E42"
                     Foreground="#CCCCCC"
                     BorderBrush="#555555"
                     SelectionMode="Single"
                     Margin="0 0 0 15">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding SourceFileName}" 
                                       FontWeight="Bold"
                                       Foreground="#FFFFFF"/>
                            <TextBlock Text="{Binding TagsDisplay}" 
                                       FontSize="11"
                                       Foreground="#999999"
                                       Margin="0 2 0 0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Height="40">
                <Button Name="OkButton" 
                        Content="OK" 
                        Width="100" 
                        Margin="0 0 10 0"
                        Click="OkButton_Click"
                        Background="#007ACC"
                        Foreground="#FFFFFF"
                        FontWeight="Bold"/>
                <Button Name="CancelButton" 
                        Content="Cancel" 
                        Width="100"
                        Click="CancelButton_Click"
                        Background="#555555"
                        Foreground="#FFFFFF"
                        FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
