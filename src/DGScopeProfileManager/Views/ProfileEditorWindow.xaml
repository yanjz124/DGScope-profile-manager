<Window x:Class="DGScopeProfileManager.Views.ProfileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Editor" Height="600" Width="500"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
            <Button Content="Save" Click="Save_Click" MinWidth="80" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Margin="5"/>
        </StackPanel>
        
        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Profile Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <GroupBox Header="Basic Information" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Profile Name:" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Name="ProfileNameText" FontWeight="Bold" Margin="5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="File Path:" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Name="FilePathText" TextWrapping="Wrap" 
                                   FontSize="10" Foreground="Gray" Margin="5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Video Map:" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Name="VideoMapText" TextWrapping="Wrap" 
                                   FontSize="10" Margin="5"/>
                    </Grid>
                </GroupBox>
                
                <GroupBox Header="Display Settings" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Screen Rotation:" Margin="5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="ScreenRotation" Margin="5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Name:" Margin="5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Name="FontName" Margin="5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Font Size:" Margin="5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Name="FontSizeBox" Margin="5"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Back Color:" Margin="5"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Name="BackColor" Margin="5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Location Settings" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Home Latitude:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="HomeLatitude" Margin="5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Home Longitude:" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="HomeLongitude" Margin="5"/>
                    </Grid>
                </GroupBox>
                
                <GroupBox Header="Other Settings">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Altimeter Stations:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="AltimeterStations" Margin="5"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
