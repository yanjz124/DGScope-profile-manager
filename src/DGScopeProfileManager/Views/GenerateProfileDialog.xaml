<Window x:Class="DGScopeProfileManager.Views.GenerateProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate DGScope Profile" Height="250" Width="450"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
            <Run Text="Generating profile for: " FontWeight="Bold"/>
            <Run Name="ProfileName" FontWeight="Bold" Foreground="Blue"/>
        </TextBlock>
        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="ARTCC Code:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="ArtccCodeBox" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Facility Code:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="FacilityCodeBox" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" TextWrapping="Wrap" 
                   Foreground="Gray" FontSize="11" Margin="0,10">
            The profile will be created at:<LineBreak/>
            <Run Name="OutputPathPreview" FontStyle="Italic"/>
        </TextBlock>
        
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Generate" IsDefault="True" Click="Generate_Click" MinWidth="80" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
