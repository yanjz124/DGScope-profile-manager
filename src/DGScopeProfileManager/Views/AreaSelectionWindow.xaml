<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DGScopeProfileManager.Views.AreaSelectionWindow"
        Title="Select Area"
        WindowStartupLocation="Manual"
        Width="500" Height="450"
        MinHeight="450"
        Background="#2D2D30"
        Foreground="#CCCCCC"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="This facility has multiple areas. Please select one:"
                   FontSize="14"
                   Foreground="#FFFFFF"
                   Margin="0 0 0 10"
                   TextWrapping="Wrap"/>

        <ListBox Grid.Row="1"
                 Name="AreasList"
                 Background="#3E3E42"
                 Foreground="#CCCCCC"
                 BorderBrush="#555555"
                 SelectionMode="Single"
                 Margin="0 0 0 15"
                 MouseDoubleClick="AreasList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="{Binding Name}"
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Foreground="#FFFFFF"/>
                        <TextBlock Text="{Binding AirportsDisplay}"
                                   FontSize="11"
                                   Foreground="#999999"
                                   Margin="0 2 0 0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Name="OkButton"
                    Content="OK"
                    Width="100"
                    Height="32"
                    Margin="0 0 10 0"
                    Click="OkButton_Click"
                    Background="#007ACC"
                    Foreground="#FFFFFF"
                    FontWeight="Bold"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="32"
                    Click="CancelButton_Click"
                    Background="#555555"
                    Foreground="#FFFFFF"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
