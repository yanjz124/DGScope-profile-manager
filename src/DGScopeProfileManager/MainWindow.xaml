<Window x:Class="DGScopeProfileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGScopeProfileManager"
        xmlns:models="clr-namespace:DGScopeProfileManager.Models"
        mc:Ignorable="d"
        Title="DGScope Profile Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Click="Settings_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Fix All Video Map Paths" Click="FixAllPaths_Click"/>
                <MenuItem Header="_Refresh All" Click="RefreshAll_Click"/>
                <MenuItem Header="_DGScope Default Settings" Click="DefaultSettings_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main Content -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Action Bar -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Settings" Click="Settings_Click"/>
                <Button Content="DGScope Default Settings" Click="DefaultSettings_Click"/>
                <Button Content="Fix All Paths" Click="FixAllPaths_Click"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                <TextBlock Text="Quick Actions:" FontWeight="Bold"/>
            </StackPanel>
            
            <!-- Main Split View -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel: CRC Profiles -->
                <GroupBox Grid.Column="0" Header="CRC ARTCC Profiles">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                            <TextBlock Text="Select an ARTCC to generate profiles:" FontSize="11" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Generate Profile" Click="GenerateProfile_Click" Name="GenerateButton" Margin="0,0,5,0"/>
                                <Button Grid.Column="1" Content="Refresh All" Click="RefreshAll_Click" Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <ListBox Name="CrcProfilesList"
                                 SelectionMode="Single"
                                 SelectionChanged="CrcProfilesList_SelectionChanged"
                                 MouseDoubleClick="CrcProfilesList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ArtccCode}" FontSize="14" FontWeight="Bold"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </GroupBox>
                
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>
                
                <!-- Right Panel: DGScope Facilities & Profiles -->
                <GroupBox Grid.Column="2" Header="DGScope Profiles">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Batch Settings Panel -->
                        <Expander Grid.Row="0" Header="Batch Settings" IsExpanded="False" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Apply settings to all selected profiles:" FontStyle="Italic" Margin="0,5"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Screen Rotation:"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Name="BatchRotation" Margin="5"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Name:"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Name="BatchFontName" Margin="5"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Font Size:"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Name="BatchFontSize" Margin="5"/>
                                    
                                    <Button Grid.Row="3" Grid.Column="1" Content="Apply to Selected" 
                                            Click="ApplyBatchSettings_Click" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Expander>
                        
                        <!-- TreeView for hierarchical display -->
                        <TreeView Grid.Row="1" Name="FacilitiesTree" 
                                  SelectedItemChanged="FacilityTree_SelectionChanged">
                            <TreeView.Resources>
                                <!-- Facility Level Template -->
                                <HierarchicalDataTemplate DataType="{x:Type models:Facility}" ItemsSource="{Binding Profiles}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📁" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ArtccCode}" FontWeight="Bold"/>
                                        <TextBlock Text=" / "/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                                
                                <!-- Profile Level Template -->
                                <DataTemplate DataType="{x:Type models:DgScopeProfile}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                        
                        <!-- Profile Actions -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Name="EditProfileButton" Content="Edit Profile" Click="EditProfile_Click"/>
                            <Button Name="DeleteProfileButton" Content="Delete Profile" Click="DeleteProfile_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
